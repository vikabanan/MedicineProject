<Window x:Class="MedicineProject.VisitDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicineProject"
        mc:Ignorable="d"
        Title="Информация о визите"
        Height="500"
        Width="800"
        Background="#F4F7F9">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ВИЗИТ -->
        <GroupBox Header="Визит" Margin="0 0 0 15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Дата:" Grid.Row="0"/>
                <TextBlock Text="{Binding VisitDate}" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Диагноз:" Grid.Row="1"/>
                <TextBox Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="1"
                         Grid.Column="1"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <TextBlock Text="Назначения:" Grid.Row="2"/>
                <TextBox Text="{Binding Prescriptions, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="2"
                         Grid.Column="1"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="60"/>

                <Button Content="Сохранить изменения"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="180"
                        Height="35"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Background="#3A8DDF"
                        Foreground="White"
                        Click="BtnSaveVisit_Click"/>
            </Grid>
        </GroupBox>

        <!-- НАПРАВЛЕНИЯ -->
        <GroupBox Header="Направления" Grid.Row="1">
            <DockPanel>

                <Button Content="Удалить"
                        DockPanel.Dock="Top"
                        Width="120"
                        Height="28"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Left"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="13"
                        Padding="10,2"
                        Click="BtnDeleteReferral_Click"/>


                <DataGrid x:Name="dgReferrals"
                          ItemsSource="{Binding Referrals}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Тип"
                                            Binding="{Binding ReferralType}"
                                            Width="*"/>

                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding ReferralDate}"
                                            Width="130"/>

                        <DataGridTextColumn Header="Статус"
                                            Binding="{Binding Status}"
                                            Width="100"/>

                        <DataGridTextColumn Header="Результаты"
                                            Width="150"
                                            Binding="{Binding LabResults.Count,
                                                      StringFormat=Результатов: {0}}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

    </Grid>
</Window>