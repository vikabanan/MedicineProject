<Window x:Class="MedicineProject.LaborantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicineProject"
        mc:Ignorable="d"
                Title="Рабочее место лаборанта" Height="650" Width="950"
        Background="#F4F6F9">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Верхняя панель с выходом -->
            <RowDefinition Height="Auto"/> <!-- Панель фильтров -->
            <RowDefinition Height="*"/>   <!-- Таблица направлений -->
            <RowDefinition Height="Auto"/> <!-- Блок результатов -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,15"
                BorderBrush="#D0D7E2"
                BorderThickness="1">
            <DockPanel>
                <TextBlock Text="Рабочее место лаборанта"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <Button x:Name="btnLogout"
                        Content="Выйти"
                        Width="90"
                        Height="28"
                        Margin="10,0,0,0"
                        Padding="5,0"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right"
                        Click="btnLogout_Click"/>
            </DockPanel>
        </Border>

        <!-- Панель фильтрации -->
        <Border Grid.Row="1"
                Background="White" CornerRadius="8" Padding="10" Margin="0,0,0,15" 
                BorderBrush="#D0D7E2" BorderThickness="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >

                <TextBlock Text="Поиск пациента:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtPatientSearch" Width="180" Margin="0,0,15,0"/>

                <TextBlock Text="Тип анализа:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="txtTypeSearch" Width="180" Margin="0,0,15,0"/>

                <Button Content="Применить" Width="120" Margin="5,0"
                        Background="#4C9AFF" Foreground="White" Padding="5"
                        Click="btnFilter_Click"/>

                <Button Content="Сбросить" Width="100" Margin="5,0"
                        Background="#C9D6E5" Foreground="Black" Padding="5"
                        Click="btnResetFilter_Click"/>

            </StackPanel>
        </Border>


        <!-- Таблица направлений -->
        <Border Grid.Row="2"
                Background="White" CornerRadius="8" Padding="10"
                BorderBrush="#D0D7E2" BorderThickness="1">

            <DataGrid x:Name="dgReferrals"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single">

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Пациент"
                            Binding="{Binding PatientName}"
                            Width="*" />

                    <DataGridTextColumn Header="Тип анализа"
                            Binding="{Binding ReferralType}"
                            Width="*" />

                    <DataGridTextColumn Header="Дата назначения"
                            Binding="{Binding ReferralDate}"
                            Width="150" />

                    <DataGridTextColumn Header="Статус"
                            Binding="{Binding Status}"
                            Width="120" />

                </DataGrid.Columns>

            </DataGrid>

        </Border>


        <!-- Блок добавления результатов -->
        <Border Grid.Row="3"
                Background="White" CornerRadius="8" Padding="15" Margin="0,15,0,0"
                BorderBrush="#D0D7E2" BorderThickness="1">

            <StackPanel Orientation="Vertical">

                <TextBlock Text="Добавление результатов анализа" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Описание:"/>
                <TextBox x:Name="txtResultDescription"
                         Height="70" TextWrapping="Wrap" Margin="0,5,0,10"/>

                <TextBlock Text="Заключение:"/>
                <TextBox x:Name="txtConclusion"
                         Height="70" TextWrapping="Wrap" Margin="0,5,0,10"/>

                <Button Content="Сохранить результаты"
                        Width="180" Height="32"
                        Background="#4CAF50" Foreground="White"
                        HorizontalAlignment="Left"
                        Click="btnSaveResults_Click"/>
            </StackPanel>

        </Border>

    </Grid>

</Window>
