<Window x:Class="MedicineProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация и регистрация" 
        Height="480" 
        Width="430"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F6F9">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Медицинская система" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="#2C3E50"/>

        <!-- Вкладки Вход / Регистрация -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#D0D7E2"
                BorderThickness="1">
            <TabControl
                Background="Transparent"
                BorderThickness="0"
                Margin="0">
                <!-- Вкладка входа -->
                <TabItem Header="Вход" Padding="10,5">
                    <StackPanel Margin="5,10,5,0">
                        <TextBlock Text="Логин:" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,5"
                                   Foreground="#34495E"/>
                        <TextBox x:Name="txtLogin" 
                                 Height="35"
                                 Padding="10,0"
                                 FontSize="14"
                                 Margin="0,0,0,15"
                                 BorderBrush="#D0D7E2"
                                 BorderThickness="1"
                                 VerticalContentAlignment="Center"/>

                        <TextBlock Text="Пароль:" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,5"
                                   Foreground="#34495E"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Height="35"
                                     Padding="10,0"
                                     FontSize="14"
                                     Margin="0,0,0,20"
                                     BorderBrush="#D0D7E2"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     KeyDown="txtPassword_KeyDown"/>

                        <Button Content="Войти" 
                                Height="40"
                                Background="#4CAF50"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                HorizontalAlignment="Stretch"
                                Click="btnLogin_Click"/>
                    </StackPanel>
                </TabItem>

                <!-- Вкладка регистрации -->
                <TabItem Header="Регистрация" Padding="10,5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="5,10,5,10">
                            <TextBlock Text="Логин:" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"
                                       Foreground="#34495E"/>
                            <TextBox x:Name="txtLoginReg" 
                                     Height="35"
                                     Padding="10,0"
                                     FontSize="14"
                                     Margin="0,0,0,15"
                                     BorderBrush="#D0D7E2"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"/>

                            <TextBlock Text="Пароль:" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"
                                       Foreground="#34495E"/>
                            <PasswordBox x:Name="txtPasswordReg" 
                                         Height="35"
                                         Padding="10,0"
                                         FontSize="14"
                                         Margin="0,0,0,15"
                                         BorderBrush="#D0D7E2"
                                         BorderThickness="1"
                                         VerticalContentAlignment="Center"
                                         KeyDown="txtPasswordReg_KeyDown"/>

                            <TextBlock Text="Подтверждение пароля:" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"
                                       Foreground="#34495E"/>
                            <PasswordBox x:Name="txtPasswordConfirmReg" 
                                         Height="35"
                                         Padding="10,0"
                                         FontSize="14"
                                         Margin="0,0,0,15"
                                         BorderBrush="#D0D7E2"
                                         BorderThickness="1"
                                         VerticalContentAlignment="Center"
                                         KeyDown="txtPasswordConfirmReg_KeyDown"/>

                            <TextBlock Text="ФИО:" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"
                                       Foreground="#34495E"/>
                            <TextBox x:Name="txtFullNameReg" 
                                     Height="35"
                                     Padding="10,0"
                                     FontSize="14"
                                     Margin="0,0,0,15"
                                     BorderBrush="#D0D7E2"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"/>

                            <TextBlock Text="Роль:" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"
                                       Foreground="#34495E"/>
                            <ComboBox x:Name="cmbRoleReg"
                                      Height="35"
                                      Padding="10,0"
                                      FontSize="14"
                                      Margin="0,0,0,20"
                                      BorderBrush="#D0D7E2"
                                      BorderThickness="1"
                                      VerticalContentAlignment="Center">
                                <ComboBoxItem Content="Доктор" Tag="Doctor" IsSelected="True"/>
                                <ComboBoxItem Content="Лаборант" Tag="Laborant"/>
                            </ComboBox>

                            <Button Content="Зарегистрироваться" 
                                    Height="40"
                                    Background="#2196F3"
                                    Foreground="White"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Stretch"
                                    Click="btnRegisterNewUser_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Сообщение об ошибке -->
        <TextBlock x:Name="txtError" 
                   Grid.Row="2"
                   TextWrapping="Wrap"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"
                   Visibility="Collapsed"
                   FontSize="12"/>
    </Grid>
</Window>
