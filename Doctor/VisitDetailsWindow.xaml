<Window x:Class="MedicineProject.VisitDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicineProject"
        mc:Ignorable="d"
        Title="Информация о визите"
        Height="500"
        Width="800"
        Background="#F4F7F9">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ВИЗИТ -->
        <GroupBox Header="Визит" Margin="0 0 0 15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Дата:" Grid.Row="0"/>
                <TextBlock Text="{Binding VisitDate}" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Диагноз:" Grid.Row="1"/>
                <TextBox Text="{Binding Diagnosis, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="1"
                         Grid.Column="1"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <TextBlock Text="Назначения:" Grid.Row="2"/>
                <TextBox Text="{Binding Prescriptions, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Row="2"
                         Grid.Column="1"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>

                <Button Content="Сохранить изменения"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="180"
                        Height="35"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Background="#3A8DDF"
                        Foreground="White"
                        Click="BtnSaveVisit_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Направления" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="dgReferrals"
                  Grid.Row="0"
                  ItemsSource="{Binding Referrals}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  VerticalScrollBarVisibility="Auto">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Тип"
                                    Binding="{Binding ReferralType}"
                                    Width="160"/>

                        <DataGridTextColumn Header="Дата"
                                    Binding="{Binding ReferralDate,
                                              StringFormat=dd.MM.yyyy HH:mm}"
                                    Width="170"/>

                        <DataGridTextColumn Header="Статус"
                                    Binding="{Binding Status}"
                                    Width="110"/>

                        <DataGridTemplateColumn Header="Результаты" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <ScrollViewer MaxHeight="140"
                                          VerticalScrollBarVisibility="Auto">

                                        <StackPanel>

                                            <TextBlock Text="Результатов: 0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding LabResults.Count}" Value="0">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <ItemsControl ItemsSource="{Binding LabResults}">
                                                <ItemsControl.Style>
                                                    <Style TargetType="ItemsControl">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding LabResults.Count}" Value="0">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ItemsControl.Style>

                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Margin="0,4"
                                                        Padding="6"
                                                        Background="White"
                                                        BorderBrush="#D0D7E2"
                                                        BorderThickness="1"
                                                        CornerRadius="4">

                                                            <StackPanel>
                                                                <TextBlock Text="Описание:"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"/>
                                                                <TextBlock Text="{Binding Description}"
                                                                   TextWrapping="Wrap"/>

                                                                <TextBlock Text="Заключение:"
                                                                   Margin="0,6,0,0"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"/>
                                                                <TextBlock Text="{Binding Conclusion}"
                                                                   TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>

                                            </ItemsControl>

                                        </StackPanel>
                                    </ScrollViewer>

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <!-- КНОПКА УДАЛЕНИЯ -->
                <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

                    <Button Content="Удалить направление"
                    Width="170"
                    Height="32"
                    Background="#E53935"
                    Foreground="White"
                    FontSize="13"
                    Padding="10,2"
                    Click="BtnDeleteReferral_Click"/>
                </StackPanel>

            </Grid>
        </GroupBox>


    </Grid>
</Window>