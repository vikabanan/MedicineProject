<Window x:Class="MedicineProject.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicineProject"
        mc:Ignorable="d"
        Title="Добавить пациента"
        Height="650"
        Width="420"
        WindowStartupLocation="CenterOwner">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="ФИО:" Grid.Row="0"/>
            <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Дата рождения:" Grid.Row="1"/>
            <DatePicker x:Name="dpBirthDate" Grid.Row="1" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Пол:" Grid.Row="2"/>
            <Border x:Name="borderGender" Grid.Row="2" Grid.Column="1" Margin="0,5">
                <ComboBox x:Name="cbGender">
                    <ComboBoxItem Content="М"/>
                    <ComboBoxItem Content="Ж"/>
                </ComboBox>
            </Border>

            <TextBlock Text="Телефон:" Grid.Row="3"/>
            <TextBox x:Name="txtPhone" Grid.Row="3" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Адрес:" Grid.Row="4"/>
            <TextBox x:Name="txtAddress" Grid.Row="4" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Полис:" Grid.Row="5"/>
            <TextBox x:Name="txtInsurance" Grid.Row="5" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="СНИЛС:" Grid.Row="6"/>
            <TextBox x:Name="txtSNILS" Grid.Row="6" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Паспорт:" Grid.Row="7"/>
            <TextBox x:Name="txtPassport" Grid.Row="7" Grid.Column="1" Margin="0,5"/>

            <TextBlock Text="Группа крови:" Grid.Row="8"/>
            <Border x:Name="borderBloodGroup" Grid.Row="8" Grid.Column="1" Margin="0,5">
                <ComboBox x:Name="cbBloodGroup"/>
            </Border>

            <StackPanel Grid.Row="9" Grid.ColumnSpan="2" Margin="0,10,0,0">
                <TextBlock Text="Хронические заболевания:"/>
                <TextBox x:Name="txtChronicDiseases"
                         Height="90"
                         Margin="0,5,0,0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <Button Content="Сохранить"
                    Grid.Row="11"
                    Grid.ColumnSpan="2"
                    Height="40"
                    Margin="0,20,0,0"
                    Background="#4CAF50"
                    Foreground="White"
                    FontSize="15"
                    Click="BtnSave_Click"/>

        </Grid>
    </ScrollViewer>
</Window>